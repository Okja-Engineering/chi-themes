{
  "name": "@okja/chi-themes",
  "version": "0.1.0",
  "description": "Pre-composed CSS themes built on Chi Design System tokens",
  "type": "module",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./default.css": "./dist/default.css",
    "./blue.css": "./dist/blue.css",
    "./purple.css": "./dist/purple.css",
    "./reset.css": "./dist/reset.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "postcss 'src/*.css' --dir dist --base src",
    "check": "stylelint 'src/**/*.css'",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@okja/chi-tokens": "^0.4.2"
  },
  "devDependencies": {
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "stylelint": "^16.12.0",
    "stylelint-config-standard": "^37.0.0"
  }
}
